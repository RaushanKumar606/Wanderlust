<form method="POST" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
  <div class="row">
    <div class="col-5 offset-4">
      <br><br>
      <h2>Creating a new Listing</h2>

      <div class="form-group mb-3">
        <label for="title">Title:</label>
        <input id="title" name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required>
        <div class="valid-feedback">Title looks good</div>
        <div class="invalid-feedback">Please provide a title</div>
      </div>

      <div class="form-group mb-3">
        <label for="description">Description:</label>
        <textarea id="description" name="listing[description]" class="form-control" required></textarea>
        <div class="invalid-feedback">Please provide a description</div>
      </div>

      <label for="image">Image:</label>
      <div class="input-group mb-3">
        <input type="file" name="listing[image]" class="form-control" id="inputGroupFile02">
        <label class="input-group-text" for="inputGroupFile02">Upload</label>
        <div class="invalid-feedback">Please upload an image</div>
      </div>

      <div class="row">
        <div class="form-group col-md-6 mb-3">
          <label for="price">Price:</label>
          <input id="price" name="listing[price]" placeholder="1,200" type="number" class="form-control" required>
          <div class="invalid-feedback">Enter a valid price</div>
        </div>
        <div class="form-group col-md-6 mb-3">
          <label for="country">Country:</label>
          <input id="country" name="listing[country]" placeholder="India" type="text" class="form-control" required>
          <div class="invalid-feedback">Enter a valid country name</div>
        </div>
      </div>

      <div class="form-group mb-3">
        <label for="location">Location:</label>
        <input id="location" name="listing[location]" placeholder="Rajkot, Bihar, Patna, Delhi" type="text" class="form-control" required>
        <div class="invalid-feedback">Enter a valid location</div>
      </div>

      <br>
      <button type="submit" class="btn btn-primary">Add</button>
      <br><br>
    </div>
  </div>
</form>


